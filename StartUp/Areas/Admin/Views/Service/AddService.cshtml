@model ServiceAddVM
@{
	ViewData["Title"] = "AddService";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Start BreadCrum -->

<h5 class="card-title">Add New Category</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Service" asp-action="GetServiceList">Services</a></li>
		<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Service" asp-action="AddService">Add Service</a></li>
	</ol>
</nav>
<!-- End BreadCrum -->


<div class="card">
	<div class="card-body">
		<br />
		<!-- Floating Labels Form -->
		<form asp-area="Admin" asp-controller="Service" asp-action="AddService" method="post" class="row g-3">

			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Name" type="text" class="form-control" placeholder="Name here">
					<label asp-for="Name">Name</label>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Description" type="text" class="form-control" placeholder="Description here">
					<label asp-for="Description">Description</label>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Icon" type="text" class="form-control" placeholder="Icon here">
					<label asp-for="Icon">Icon</label>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Submit</button>
				<button type="reset" class="btn btn-secondary">Reset</button>
			</div>
		</form><!-- End floating Labels Form -->

	</div>
</div>
