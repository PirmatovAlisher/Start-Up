@model PortfolioAddVM
@{
	ViewData["Title"] = "AddPortfolio";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Start BreadCrum -->

<h5 class="card-title">Add New Portfolio</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Portfolio" asp-action="GetPortfolioList">Portfolio</a></li>
		<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Portfolio" asp-action="AddPortfolio">Add Portfolio</a></li>
	</ol>
</nav>
<!-- End BreadCrum -->



<div class="card">
	<div class="card-body">
		<br />
		<!-- Floating Labels Form -->
		<form asp-area="Admin" asp-controller="Portfolio" asp-action="AddPortfolio" method="post" class="row g-3" enctype="multipart/form-data">
			<input type="hidden" asp-for="FileName" value="FileNameTest1" />
			<input type="hidden" asp-for="FileType" value="FileTypeTest1" />
			<input type="hidden" asp-for="CategoryId" value="1" />
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Title" type="text" class="form-control" placeholder="Title here">
					<label asp-for="Title">Title</label>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="FileName" type="text" class="form-control" placeholder="File Name here">
					<label asp-for="FileName">File Name</label>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="FileType" type="text" class="form-control" placeholder="File Type here">
					<label asp-for="FileType">File Type</label>
				</div>
			</div>

			<div class="col-md-3">
				<label asp-for="Photo" class="col-md-4 col-lg-3 col-form-label"></label>
				<div class="form-floating">
					<input asp-for="Photo" type="text" accept="image/*" type="file">
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Submit</button>
				<button type="reset" class="btn btn-secondary">Reset</button>
			</div>
		</form><!-- End floating Labels Form -->

	</div>
</div>
