@model PortfolioUpdateVM
@{
	ViewData["Title"] = "UpdatePortfolio";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Start BreadCrum -->

<h5 class="card-title">Update Portfolio</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Portfolio" asp-action="GetPortfolioList">Portfolio</a></li>
		<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Portfolio" asp-action="UpdatePortfolio">Update Portfolio</a></li>
	</ol>
</nav>
<!-- End BreadCrum -->
<!-- Card with an image on top -->
<div class="card">
	<img src="~/NiceAdmin/assets/img/card.jpg" class="card-img-top" alt="...">
	<div class="card-body">
		<h5 class="card-title">@Model.Title</h5>
	</div>
</div>
<!-- End Card with an image on top -->

<div class="card">
	<div class="card-body">
		<br />
		<!-- Floating Labels Form -->
		<form asp-area="Admin" asp-controller="Portfolio" asp-action="UpdatePortfolio" method="post" class="row g-3" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="RowVersion" />
			<input type="hidden" asp-for="CategoryId"/>
			<input type="hidden" asp-for="UpdatedDate" value="@DateTime.Now" />
			@* <input type="hidden" asp-for="UpdatedDate" value="@DateTime.Now"/> *@
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Title" type="text" class="form-control" placeholder="Title here">
					<label asp-for="Title">Title</label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="FileName" type="text" class="form-control" placeholder="File Name here">
					<label asp-for="FileName">File Name</label>
					<span asp-validation-for="FileName" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="FileType" type="text" class="form-control" placeholder="File Type here">
					<label asp-for="FileType">File Type</label>
					<span asp-validation-for="FileType" class="text-danger"></span>
				</div>
			</div>

			<div class="col-md-6">
				<label asp-for="Photo" class="col-md-4 col-lg-3 col-form-label"></label>
				<div class="form-floating">
					<input asp-for="Photo" type="text" accept="image/*" type="file">
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Submit</button>
				<button type="reset" class="btn btn-secondary">Reset</button>
			</div>
		</form><!-- End floating Labels Form -->

	</div>
</div>

