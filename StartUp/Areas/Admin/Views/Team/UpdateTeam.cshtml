@model TeamUpdateVM
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Start BreadCrum -->

<h5 class="card-title">Update Team</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Team" asp-action="GetTeamList">Teams</a></li>
		<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Team" asp-action="UpdateTeam">Update Team</a></li>
	</ol>
</nav>
<!-- End BreadCrum -->

<!-- Card with an image on top -->
<div class="card">
	<img src="~/NiceAdmin/assets/img/card.jpg" class="card-img-top" alt="...">
	<div class="card-body">
		<h5 class="card-title">@Model.Title</h5>
	</div>
</div>
<!-- End Card with an image on top -->


<div class="card">
	<div class="card-body">
		<br />
		<!-- Floating Labels Form -->
		<form asp-area="Admin" asp-controller="Team" asp-action="UpdateTeam" method="post" class="row g-3" enctype="multipart/form-data">
			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="RowVersion" />
			<input type="hidden" asp-for="FileName" value="FileNameTest1" />
			<input type="hidden" asp-for="FileType" value="FileTypeTest1" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="FullName" type="text" class="form-control" placeholder="Full Name here">
					<label asp-for="FullName">FullName</label>
					<span asp-validation-for="FullName" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Title" type="text" class="form-control" placeholder="Title here">
					<label asp-for="Title">Title</label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="FileName" type="text" class="form-control" placeholder="File Name here">
					<label asp-for="FileName">File Name</label>
					<span asp-validation-for="FileName" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="FileType" type="text" class="form-control" placeholder="File Type here">
					<label asp-for="FileType">File Type</label>
					<span asp-validation-for="FileType" class="text-danger"></span>
				</div>
			</div>

			<div class="col-md-3">
				<label asp-for="Photo" class="col-md-4 col-lg-3 col-form-label"></label>
				<div class="form-floating">
					<input asp-for="Photo" type="text" accept="image/*" type="file">
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Twitter" type="text" class="form-control" placeholder="Twitter here">
					<label asp-for="Twitter">Twitter</label>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Facebook" type="text" class="form-control" placeholder="Facebook here">
					<label asp-for="Facebook">Facebook</label>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Instagram" type="text" class="form-control" placeholder="Instagram here">
					<label asp-for="Instagram">Instagram</label>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="LinkedId" type="text" class="form-control" placeholder="LinkedId here">
					<label asp-for="LinkedId">LinkedId</label>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Submit</button>
				<button type="reset" class="btn btn-secondary">Reset</button>
			</div>
		</form><!-- End floating Labels Form -->

	</div>
</div>
