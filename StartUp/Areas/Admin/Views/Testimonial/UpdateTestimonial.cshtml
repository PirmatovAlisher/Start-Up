@model TestimonialUpdateVM
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>
	<!-- Start BreadCrum -->

	<h5 class="card-title">Update Testimonial</h5>

	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
			<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Testimonial" asp-action="GetTestimonialList">Testimonials</a></li>
			<li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Testimonial" asp-action="UpdateTestimonial">Update Testimonial</a></li>
		</ol>
	</nav>
	<!-- End BreadCrum -->
	<!-- Card with an image on top -->
	<div class="card">
		<img src="~/NiceAdmin/assets/img/card.jpg" class="card-img-top" alt="...">
		<div class="card-body">
			<h5 class="card-title">@Model.Title</h5>
		</div>
	</div>
	<!-- End Card with an image on top -->


	<div class="card">
		<div class="card-body">
			<br />
			<!-- Floating Labels Form -->
			<form asp-area="Admin" asp-controller="Testimonial" asp-action="UpdateTestimonial" method="post" class="row g-3" enctype="multipart/form-data">
				<input type="hidden" asp-for="FileName" value="FileNameTest1" />
				<input type="hidden" asp-for="FileType" value="FileTypeTest1" />
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="RowVersion" />
				<div class="col-md-12">
					<div class="form-floating">
						<input asp-for="FullName" type="text" class="form-control" placeholder="Full Name here">
						<label asp-for="FullName">Full Name</label>
					</div>
				</div><div class="col-md-12">
					<div class="form-floating">
						<input asp-for="Title" type="text" class="form-control" placeholder="Title here">
						<label asp-for="Title">Title</label>
					</div>
				</div><div class="col-md-12">
					<div class="form-floating">
						<input asp-for="Comment" type="text" class="form-control" placeholder="Comment here">
						<label asp-for="Comment">Comment</label>
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-floating">
						<input asp-for="FileName" type="text" class="form-control" placeholder="File Name here">
						<label asp-for="FileName">File Name</label>
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-floating">
						<input asp-for="FileType" type="text" class="form-control" placeholder="File Type here">
						<label asp-for="FileType">File Type</label>
					</div>
				</div>

				<div class="col-md-3">
					<label asp-for="Photo" class="col-md-4 col-lg-3 col-form-label"></label>
					<div class="form-floating">
						<input asp-for="Photo" type="text" accept="image/*" type="file">
					</div>
				</div>

				<div class="text-center">
					<button type="submit" class="btn btn-primary">Submit</button>
					<button type="reset" class="btn btn-secondary">Reset</button>
				</div>
			</form><!-- End floating Labels Form -->

		</div>
	</div>
</h1>

