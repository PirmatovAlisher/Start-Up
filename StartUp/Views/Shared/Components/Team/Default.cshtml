@model List<TeamListForUI>

<!-- ======= Team Section ======= -->
<section id="team" class="team section-bg">
	<div class="container">

		<div class="section-title">
			<span>Team</span>
			<h2>Team</h2>
		</div>

		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-6 d-flex align-items-stretch">
					<div class="member">
						<img src="~/images/@item.FileName" alt="Team">
						<h4>@item.FullName</h4>
						<span>@item.Title</span>
						<div class="social">
							@if (!string.IsNullOrWhiteSpace(item.Twitter))
							{
								<a href="@item.Twitter"><i class="bi bi-twitter"></i></a>
							}
							@if (!string.IsNullOrWhiteSpace(item.Facebook))
							{
								<a href="@item.Facebook"><i class="bi bi-facebook"></i></a>
							}
							@if (!string.IsNullOrWhiteSpace(item.Instagram))
							{
								<a href="@item.Instagram"><i class="bi bi-instagram"></i></a>
							}
							@if (!string.IsNullOrWhiteSpace(item.LinkedId))
							{
								<a href="@item.LinkedId"><i class="bi bi-linkedin"></i></a>
							}
						</div>
					</div>
				</div>
			}
		</div>

	</div>
</section><!-- End Team Section -->